#!/bin/sh

if test "x$ROOTSYS" = "x"; then
   echo "ROOTSYS undefined!"
   exit 1
fi

jflag="-j2"
if test -f /proc/cpuinfo ; then
   np=`grep processor /proc/cpuinfo | wc -l`
   npb=`expr $np + 1`
   jflag="-j$npb"
fi
if test ! "x$1" = "x"; then
  jflag="-j$1"
fi
echo "Using jflag: $jflag"

outfile="compilation.times"

CWD=`pwd`
cd $ROOTSYS
# Cleanup
rm -f $outfile
# Record starting time
start=`date +%s`
date > $outfile
# Sync
/home/ganis/bin/syncgit
if test ! "x$?" = "x0" ; then
   echo "Synchronization failed"
   exit 1
fi
# Build
make $jflag
# Make sure everything has been build
make
# Record end time
date >> $outfile;
end=`date +%s`
# Show
cat $outfile
btime=`expr $end - $start`
echo "Build time: $btime secs with $jflag"
# Go back
cd $CWD




